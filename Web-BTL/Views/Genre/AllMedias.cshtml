@model IEnumerable<Web_BTL.Models.Medias.MediaModel>

@{
    ViewBag.Title = "All Medias";
}

<h2>All Medias</h2>

<!-- Form tìm kiếm -->
<form method="get" asp-action="AllMedias">
    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Search by movie name" />
    <button type="submit">Search</button>
</form>

<div class="t-movie-section">
    @foreach (var item in Model)
    {
        <a class="t-movie" href="#">
            <img src="@item.MediaImagePath" alt="@item.MediaName">
            <div class="t-movie-content">
                <div class="t-movie-title">@item.MediaName</div>
                <div class="t-movie-info">
                    <div>
                        <i class="bx bxs-star"></i>
                        <span>9.5</span>
                    </div>
                    <div>
                        <i class="bx bxs-time"></i>
                        <span>@item.MediaDuration</span>
                    </div>
                    <div>
                        <span>@item.MediaQuality</span>
                    </div>
                    <div>
                        <span>@item.MediaAgeRating</span>
                    </div>
                </div>
            </div>
        </a>
    }
</div>

<!-- Phân trang -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.PageNumbers; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("AllMedias", new { pageindex = i, searchTerm = ViewBag.SearchTerm })">@i</a>
            </li>
        }
    </ul>
</nav>
