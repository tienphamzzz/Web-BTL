@using Web_BTL.Models.Medias
@model IEnumerable<MediaModel>

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div>
            <div class="card-header">
                List Films
            </div>
            <div class="card-body">
                <table id="tb" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Tên phim</th>
                            <th>Chất lượng</th>
                            <th>Ngày phát hành</th>
                            <th>Số tuổi</th>
                            <th>Thời lượng</th>
                            <th>Gói</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr style="position: relative">
                                <td>@m.MediaName</td>
                                <td>@m.MediaQuality</td>
                                <td>@m.ReleaseDate</td>
                                <td>@m.MediaAgeRating</td>
                                <td>@(m.MediaDuration)</td>
                                <td>@m.package</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a class="btn btn-outline-primary" asp-action="AddMedia">Add Film</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>

    </script>
}