<div class="hero-slide">
    <div class="owl-carousel carousel-nav-center" id="hero-carousel">
        <!-- SLIDE ITEM -->
        @foreach (var movie in Model)
        {
            if (movie.MediaName == "Black Panther" || movie.MediaName == "John Wick" || movie.MediaName == "GOTG Vol 3")
            {
                var img = "./images/" + @movie.MediaName + "-banner.png";
                <div class="hero-slide-item">
                    <a asp-action="Index" asp-controller="Movie" asp-route-movieId="@movie.MediaId">
                        <img src="@img" class="movie-image" alt="@movie.MediaName Banner">
                    </a>
                </div>

        <!-- END SLIDE ITEM -->
        <!-- SLIDE ITEM -->
        <div class="hero-slide-item">
            <img src="./images/GATG vol3.jpeg" alt="">
                    <div class="overlay"></div>
                    <div class="hero-slide-item-content">
                        <div class="item-content-wraper">
                            <div class="item-content-title top-down">
                                @movie.MediaName
                            </div>
                            <div class="movie-infos top-down delay-2">
                                <div class="movie-info">
                                    <i class="bx bxs-star"></i>
                                    <span>9.5</span>
                                </div>
                                <div class="movie-info">
                                    <i class="bx bxs-time"></i>
                                    <span>120p</span>
                                </div>
                                <div class="movie-info">
                                    <span>HD</span>
                                </div>
                                <div class="movie-info">
                                    <span>@movie.MediaAgeRating+</span>
                                </div>
                            </div>
                            <div class="item-content-description top-down delay-4">
                                @movie.MediaDescription
                            </div>
                            <div class="item-action top-down delay-6">
                                <a href="#" class="btn btn-hover">
                                    <i class="bx bxs-right-arrow"></i>
                                    <span>Watch now</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        <!-- END SLIDE ITEM -->
    </div>
</div>
