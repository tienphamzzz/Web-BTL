@section Styles {
    <link href="~/css/grid.css" rel="stylesheet">
    <link href="~/css/app.css" rel="stylesheet">
}

@{
    var session = Context.Session;
    var str = session.GetString("LogIn Session");
}

<div class="nav-wrapper" id="topnav">
    <div class="container" >
        <div class="nav">
            <a asp-controller="Home" asp-action="Index" class="logo">
                <i class='bx bx-movie-play bx-tada main-color'></i>Fl<span class="main-color">i</span>x
            </a>



            <form method="get" asp-action="AllMedias" asp-controller="Genre" class="search-form">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Search by movie name" class="search-input" />
                <button type="submit" class="search-button">
                    <i class='bx bx-search'></i>
                </button>
            </form>




            <ul class="nav-menu" id="nav-menu">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Genre" asp-action="Index">Genre</a></li>
                <li><a href="#">About</a></li>
                @if (str != null)
                {
                    <li>
                        <a asp-controller="Account" asp-action="UserInformation" class="btn btn-hover">
                            <span>User</span>
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Account" asp-action="SignIn" class="btn btn-hover">
                            <span>Sign in</span>
                        </a>
                    </li>
                }

            </ul>
            <!-- MOBILE MENU TOGGLE -->
            <div class="hamburger-menu" id="hamburger-menu">
                <div class="hamburger"></div>
            </div>
        </div>
    </div>
</div>